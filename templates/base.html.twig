{% set site = site() %}
{% set weather = getWeather(app.request) %}
<!DOCTYPE html>
<html>
    <head> 
        <meta charset="UTF-8">
        <title>{% block title %}{{ site.siteName }}{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="keywords" content="{% block keywords %}{{ site.keywords }}{% endblock %}">
        <meta name="description" content="{% block description %}{{ site.description }}{% endblock %}">
        {% block meta %}
            {% for meta in getMeta() %}
                {{ meta.codes|raw }}
                {% else %}
            {% endfor %}
        {% endblock %}
        {% block stylesheets %}
            <link rel="icon" type="image/png" href="images/icons/favicon.png"/>
            <!--===============================================================================================-->
            <link rel="stylesheet" type="text/css" href="{{ asset('assets/vendor/bootstrap/css/bootstrap.min.css') }}">
            <!--===============================================================================================-->
            <link rel="stylesheet" type="text/css" href="{{ asset('assets/fonts/fontawesome-5.0.8/css/fontawesome-all.min.css') }}">
            <!--===============================================================================================-->
            <link rel="stylesheet" type="text/css" href="{{ asset('assets/fonts/iconic/css/material-design-iconic-font.min.css') }}">
            <!--===============================================================================================-->
            <link rel="stylesheet" type="text/css" href="{{ asset('assets/vendor/animate/animate.css') }}">
            <!--===============================================================================================-->
            <link rel="stylesheet" type="text/css" href="{{ asset('assets/vendor/css-hamburgers/hamburgers.min.css') }}">
            <!--===============================================================================================-->
            <link rel="stylesheet" type="text/css" href="{{ asset('assets/vendor/animsition/css/animsition.min.css') }}">
            <!--===============================================================================================-->
            <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/util.min.css') }}">
            <!--===============================================================================================-->
            <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/main.css') }}">
        {% endblock %}
    </head>
    <body class="animsition">
    {% block body %}
        {% block menu %}
            {{ include('default/menu.html.twig') }}
        {% endblock %}

        {% block notice %}{% endblock %}

        {% block height_light %}{% endblock %}

        {% block main_content %}
            <section class="bg0 p-t-70">
                <div class="container">
                    <div class="row justify-content-center">
                        <div class="col-md-10 col-lg-8">
                            {% block main_sider %}{% endblock %}
                        </div>
                        <div class="col-md-10 col-lg-4">
                            <div class="p-l-10 p-rl-0-sr991 p-b-20">
                                {% block right_sider %} {% endblock %}
                            </div>
                        </div>
                    </div>
                    {% block midle_bottom %}{% endblock %}
                </div>
            </section>
        {% endblock %}

        {% block advert %}{% endblock %}

    {% endblock %}
    {% block footer %}{{ include("default/footer.html.twig") }}{% endblock %}
    <!-- Back to top -->
    <div class="btn-back-to-top" id="myBtn">
		<span class="symbol-btn-back-to-top">
			<span class="fas fa-angle-up"></span>
		</span>
    </div>
    {% block javascripts %}
        <script src="{{ asset('assets/vendor/jquery/jquery-3.2.1.min.js') }}"></script>
        <!--===============================================================================================-->
        <script src="{{ asset('assets/vendor/animsition/js/animsition.min.js') }}"></script>
        <!--===============================================================================================-->
        <script src="{{ asset('assets/vendor/bootstrap/js/popper.js') }}"></script>
        <script src="{{ asset('assets/vendor/bootstrap/js/bootstrap.min.js') }}"></script>
        <!--===============================================================================================-->
        <script src="{{ asset('assets/js/main.js') }}"></script>
    {% endblock %}
    {% block otherScript %}
        {% for script in getScripts() %}
            {{ script|raw }}
            {% else %}
        {% endfor %}
    {% endblock %}

    </body>
</html>
