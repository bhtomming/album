{% extends 'base.html.twig' %}

{% block title %}Script index{% endblock %}

{% block body %}
    <h1>Script index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Codes</th>
                <th>Enable</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for script in scripts %}
            <tr>
                <td>{{ script.id }}</td>
                <td>{{ script.name }}</td>
                <td>{{ script.codes }}</td>
                <td>{{ script.enable ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('script_show', {'id': script.id}) }}">show</a>
                    <a href="{{ path('script_edit', {'id': script.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('script_new') }}">Create new</a>
{% endblock %}
