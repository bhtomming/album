{% extends 'base.html.twig' %}

{% block title %}Tags{% endblock %}
{% set albums = tag.albums %}
{% block notice %}
    {{ include("default/breadcrumb.html.twig",{"object":tag}) }}
{% endblock %}

{% block main_sider %}
    {{ include("default/new_content.html.twig",{'name': '最新内容','col':2,'albums': albums |sortBy('publishedAt','DESC')|slice(0,10)}) }}
{% endblock %}



{% block right_sider %}
    {{ include("default/height-main-right.html.twig",{'albums':albums }) }}
    {% if stars != null %}
        {{ include("default/right-star.html.twig",{"stars":stars}) }}
    {% endif %}

{% endblock %}