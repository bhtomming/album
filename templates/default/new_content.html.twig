{#<div class="col-md-10 col-lg-8 p-b-20">#}
    <div class="how2 how2-cl4 flex-s-c m-r-10 m-r-0-sr991">
        <h3 class="f1-m-2 cl3 tab01-title">
            {{ name }}
        </h3>
    </div>

    <div class="row p-t-35">
        {% for album in albums %}
        <div class="col-sm-6 {{ col == 2 ? "p-r-25 p-r-15-sr991" : "col-md-4" }} ">
            <!-- Item latest -->
            <div class="m-b-45">
                <a href="{{ path("album_show",{"id":album.id}) }}" class="wrap-pic-w hov1 trans-03">
                    <img src="{{ album.pictures.0.webPath|imagine_filter("list_cl2") }}" alt="IMG">
                </a>

                <div class="p-t-16">
                    <h5 class="p-b-5">
                        <a href="{{ path('album_show',{id: album.id}) }}" class="f1-m-3 cl2 hov-cl10 trans-03">
                            {{ album.name }}
                        </a>
                    </h5>

                    <span class="cl8">
                        {% if album.category %}
                        <a href="{{ path('category_show',{id: album.category.id}) }}" class="f1-s-4 cl8 hov-cl10 trans-03">
                            {{ album.category.name }}
                        </a>
                        {% endif %}

                        <span class="f1-s-3 m-rl-3">
                            -
                        </span>

                        <span class="f1-s-3">
                            {{ album.publishedAt|date("Y-m-d H:i:s") }}
                        </span>
                    </span>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
{#
</div>#}
