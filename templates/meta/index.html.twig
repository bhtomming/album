{% extends 'base.html.twig' %}

{% block title %}Meta index{% endblock %}

{% block body %}
    <h1>Meta index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Codes</th>
                <th>Enable</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for metum in metas %}
            <tr>
                <td>{{ metum.id }}</td>
                <td>{{ metum.name }}</td>
                <td>{{ metum.codes }}</td>
                <td>{{ metum.enable ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('meta_show', {'id': metum.id}) }}">show</a>
                    <a href="{{ path('meta_edit', {'id': metum.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('meta_new') }}">Create new</a>
{% endblock %}
